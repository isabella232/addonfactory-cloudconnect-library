{
    "meta": {
        "apiVersion": "1.0.0"
    },
    "tokens": [
        "name",
        "instance",
        "sysparm_limit",
        "table_name",
        "since_when",
        "host",
        "username",
        "password",
        "logging_level"
    ],
    "global_settings": {
        "logging": {
            "level": "{{logging_level}}"
        }
    },
    "requests": [
        {
            "request": {
                "url": "https://{{host}}/api/now/table/{{table_name}}?sysparm_limit={{sysparm_limit}}&sysparm_query=sys_updated_on>{{since_when}}^ORDERBYsys_updated_on",
                "method": "GET",
                "auth": {
                    "type": "basic_auth",
                    "options": {
                        "username": "{{username}}",
                        "password": "{{password}}"
                    }
                },
                "headers": {
                    "accept": "application/json"
                }
            },
            "pre_process": {
            },
            "post_process": {
                "skip_conditions": [
                    {
                        "input": [
                            "{{__response__.body}}",
                            "$.result[*]"
                        ],
                        "method": "json_not_empty"
                    }
                ],
                "pipeline": [
                    {
                        "input": [
                            "{{__response__.body}}"
                        ],
                        "method": "set_var",
                        "output": "content"
                    },
                    {
                        "input": [
                            "$.result[-1].sys_updated_on",
                            "{{content}}"
                        ],
                        "method": "json_path",
                        "output": "since_when"
                    },
                    {
                        "input": [
                            "$.result[*]",
                            "{{content}}"
                        ],
                        "method": "json_path",
                        "output": "result"
                    },
                    {
                        "input": [
                            "{{result}}"
                        ],
                        "method": "splunk_xml",
                        "output": "events"
                    },
                    {
                        "input": [
                            "{{events}}"
                        ],
                        "method": "std_output"
                    }
                ]
            },
            "iteration_mode": {
                "iteration_count": "-1",
                "stop_conditions": [
                    {
                        "input": [
                            "$.result[*]",
                            "{{content}}"
                        ],
                        "method": "json_empty"
                    }
                ]
            }
        }
    ]
}