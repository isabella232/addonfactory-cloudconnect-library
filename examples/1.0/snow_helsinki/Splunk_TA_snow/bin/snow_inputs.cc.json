{
    "meta": {
        "apiVersion": "1.0.0"
    },
    "tokens": [
        "name",
        "snow_host",
        "sysparm_limit",
        "table_name",
        "since_when",
        "index",
        "sourcetype",
        "source",
        "__settings__.proxy.proxy_enabled",
        "__settings__.proxy.proxy_url",
        "__settings__.proxy.proxy_port",
        "__settings__.proxy.proxy_username",
        "__settings__.proxy.proxy_password",
        "__settings__.proxy.proxy_rdns",
        "__settings__.proxy.proxy_type",
        "__settings__.logging.loglevel",
        "account.username",
        "account.password"
    ],
    "global_settings": {
        "proxy": {
            "enabled": "{{__settings__.proxy.proxy_enabled}}",
            "host": "{{__settings__.proxy.proxy_url}}",
            "port": "{{__settings__.proxy.proxy_port}}",
            "username": "{{__settings__.proxy.proxy_username}}",
            "password": "{{__settings__.proxy.proxy_password}}",
            "rdns": "{{__settings__.proxy.proxy_rdns}}",
            "type": "{{__settings__.proxy.proxy_type}}"
        },
        "logging": {
            "level": "{{__settings__.logging.loglevel}}"
        }
    },
    "requests": [
        {
            "request": {
                "url": "https://{{snow_host}}/api/now/table/{{table_name}}?sysparm_limit={{sysparm_limit}}&sysparm_query=sys_updated_on>{{since_when}}^ORDERBYsys_updated_on",
                "method": "GET",
                "auth": {
                    "type": "basic_auth",
                    "options": {
                        "username": "{{account.username}}",
                        "password": "{{account.password}}"
                    }
                },
                "headers": {
                    "accept": "application/json"
                }
            },
            "pre_process": {
                "skip_conditions": [],
                "pipeline": [
                    {
                        "input": [
                            "{{since_when}}"
                        ],
                        "method": "set_var",
                        "output": "_raw_since_when"
                    },
                    {
                        "input": [
                            "{{since_when}}",
                            "%Y-%m-%d %H:%M:%S",
                            "%Y-%m-%dT%H:%M:%S"
                        ],
                        "method": "time_str2str",
                        "output": "since_when"
                    }
                ]
            },
            "post_process": {
                "skip_conditions": [
                    {
                        "input": [
                            "{{__response__.body}}",
                            "$.result[*]"
                        ],
                        "method": "json_empty"
                    }
                ],
                "pipeline": [
                    {
                        "input": [
                            "{{__response__.body}}",
                            "$.result[-1].sys_updated_on"
                        ],
                        "method": "json_path",
                        "output": "since_when"
                    },
                    {
                        "input": [
                            "{{since_when != ''}}",
                            "since_when must not be empty!"
                        ],
                        "method": "assert_true"
                    },
                    {
                        "input": [
                            "{{since_when == _raw_since_when}}"
                        ],
                        "method": "exit_if_true"
                    },
                    {
                        "input": [
                            "{{since_when}}"
                        ],
                        "method": "set_var",
                        "output": "_raw_since_when"
                    },
                    {
                        "input": [
                            "{{__response__.body}}",
                            "$.result[*]"
                        ],
                        "method": "json_path",
                        "output": "__stdout__"
                    },
                    {
                        "input": [
                            "{{__stdout__}}",
                            "",
                            "{{index}}",
                            "{{host}}",
                            "{{source}}",
                            "{{sourcetype}}"
                        ],
                        "method": "splunk_xml",
                        "output": "__stdout__"
                    },
                    {
                        "input": [
                            "{{__stdout__}}"
                        ],
                        "method": "std_output"
                    }
                ]
            },
            "iteration_mode": {
                "iteration_count": "-1",
                "stop_conditions": [
                    {
                        "input": [
                            "{{__response__.body}}",
                            "$.result[*]"
                        ],
                        "method": "json_empty"
                    }
                ]
            },
            "checkpoint": {
                "namespace": [
                    "{{name}}"
                ],
                "content": {
                    "since_when": "{{_raw_since_when}}"
                }
            }
        }
    ]
}